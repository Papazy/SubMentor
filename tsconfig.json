{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@Services/*": ["./services/*"],
      "@Context/*": ["./context/*"],
      "@Assets/*": ["./assets/*"],
      "@Utils/*": ["./utils/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
